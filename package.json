{
  "name": "unit-test-class",
  "version": "1.0.7",
  "description": "Automatically mock javascript classes to make unit tests faster and better",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "test": "mocha --recursive --reporter spec",
    "watch-test": "mocha --recursive --watch --reporter spec",
    "test-ci": "istanbul cover ./node_modules/mocha/bin/_mocha test/**/*.js --report lcovonly -- -R spec && cat ./coverage/lcov.info"
  },
  "devDependencies": {
    "mocha": "^6.2.0",
    "chai": "^4.1.2",
    "chai-spies": "^1.0.0",
    "istanbul": "0.4.5"
  },
  "keywords": [
    "unit",
    "tests",
    "spy",
    "mock",
    "spies",
    "class",
    "es6"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hisco/unit-test-class.git"
  },
  "bugs": {
    "url": "https://github.com/hisco/unit-test-class/issues"
  },
  "homepage": "https://github.com/hisco",
  "author": "Eyald <hisco@googlegroups.comâ€¬>",
  "license": "MIT"
}
